{
  "name": "release-it-test",
  "version": "1.6.0-2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it --preRelease --only-version",
    "release-dry": "release-it --preRelease --only-version --dry-run",
    "release-prod": "release-it --version-only",
    "release-prod-dry": "release-it --dry-run --version-only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarodsmk/release-it-test.git"
  },
  "author": "Jarod Kurland",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jarodsmk/release-it-test/issues"
  },
  "homepage": "https://github.com/jarodsmk/release-it-test#readme",
  "dependencies": {
    "@release-it/conventional-changelog": "^7.0.1",
    "release-it": "^16.1.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release version v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:release": "cp ./CHANGELOG.md ./CHANGELOG2.md"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "header": "# Changelog",
        "preset": {
          "name": "angular",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        },
        "infile": "CHANGELOG.md"
      }
    }
  }
}
