{
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "header": "# Changelog",
            "preset": {
                "name": "angular",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {}
                ]
            },
            "infile": "CHANGELOG.md"
        }
    }
}